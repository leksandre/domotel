            {
                href: '#about',
                name: 'О проекте'
            },{
                href: '#visualplan',
                name: 'Выбрать на плане'
            },{
                href: '#how-to-buy',
                name: 'Как купить'
            },{
                href: '#contacts',
                name: 'Контакты'
            }
        ],
        estateTypeNavigation: [
            {
                href: '/visual/',
                name: 'На 3D-плане'
            },{
                href: '/kvartiry/',
                name: 'По параметрам'
            }
        ],
        additionalNavigation: [
            {
                href: '#',
