<ul class="factoids{% if modify %} {{ modify }}{% endif %}">
    {% for item in items %}
        <li class="factoid {% if item.modify %} {{ item.modify }}{% endif %}">
            {% if item.title %}
                <strong class="factoid__title">{{ item.title }}</strong>
            {% endif %}
            {% if item.text %}
                <div class="factoid__text">
                    {{ item.text }}
                    {% if item.button %}
                        {% include '../button/button.twig' with {
                            text: item.button,
                            modify: item.buttonModify|default('')
                        } %}
                    {% endif %}
                </div>
            {% endif %}
        </li>
    {% endfor %}
</ul>
